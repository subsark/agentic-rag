# LLM Configuration (Uncomment and configure as needed)
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# COHERE_API_KEY=your_cohere_api_key
# GOOGLE_API_KEY=your_google_api_key

# Default LLM to use (openai, anthropic, cohere, google)
LLM_PROVIDER=openai

# Vector Database Configuration (Choose one)
# For Chroma (Local)
VECTOR_DB=chroma
CHROMA_PERSIST_DIRECTORY=./data/chroma

# For Pinecone (Cloud)
# VECTOR_DB=pinecone
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX_NAME=agentic-rag

# For Qdrant (Local or Cloud)
# VECTOR_DB=qdrant
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
# QDRANT_API_KEY=your_qdrant_api_key

# Agent Configuration
MAX_ITERATIONS=10
TEMPERATURE=0.7
MAX_TOKENS=2000

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
EMBEDDING_MODEL=text-embedding-ada-002

# API Server (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agentic_rag.log

# Development
DEBUG=False
ENVIRONMENT=development